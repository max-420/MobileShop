<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Html.RenderResources("css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container navbar-container">
    <div class="navbar">
        
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Телефоны", "Catalog", "Catalog")</li>
                    <li>@Html.ActionLink("Аксессуары", "Catalog", "Catalog", new { type = "Accessory" }, new { })</li>
                    <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Корзина", "Orders", "Order")</li>
                    }
                </ul>
                @{
                    Html.RenderPartial("_LoginPartial", new LoginViewModel());
                 }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/scripts/BasketButton.js")
    @Scripts.Render("~/scripts/EmptyListMessage.js")
    @RenderSection("scripts", required: false)
    @Html.RenderResources("js")
</body>
</html>
