@model IEnumerable<OrderDisplayVM>
    @if (Model.Count() != 0)
    {
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(o => o.OrderedGoods)
                </th>
                <th>
                    @Html.DisplayNameFor(o => o.OrderTime)
                </th>
                <th>
                    @Html.DisplayNameFor(o => o.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(o => o.ContactPhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(o => o.Comment)
                </th>
                <th>
                    @Html.DisplayNameFor(o => o.Status)
                </th>
            </tr>
            @foreach (OrderDisplayVM order in Model)
            {
                <tr>
                    <td>
                        @foreach (OrderedGoods goods in order.OrderedGoods)
                    {
                            <a href="@Url.Action("Details", "Catalog", new { goodsId = goods.Id})">
                                @goods.Name
                            </a><br>
                        }
                    </td>
                    <td>
                        @order.OrderTime
                    </td>
                    <td>
                        @order.Address
                    </td>
                    <td>
                        @order.ContactPhoneNumber
                    </td>
                    <td>
                        @order.Comment
                    </td>
                    <td>
                        @order.Status
                    </td>
                </tr>
            }
        </table>
    }